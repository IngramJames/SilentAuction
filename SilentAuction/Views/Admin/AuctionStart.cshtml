@model SilentAuction.Models.Auction
@using SilentAuction.Resources
@{
    ViewBag.Title = string.Format(TextStrings.AuctionStart, Model.Name);
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.Partial("~/Views/Admin/AuctionPartial.cshtml", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@TextStrings.AuctionStartLink" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AuctionList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
