@model SilentAuction.Models.Auction
@using SilentAuction.Resources
@{
    ViewBag.Title = string.Format(TextStrings.AuctionClose, Model.Name);
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.Partial("~/Views/Admin/AuctionPartial.cshtml", Model)

        <input type="hidden" id="action" value=""/>

        <div class="form-group">
            <table class="col-md-offset-1" class="col-md-3">
                <tr>
                    <td>
                        <div >
                            <input type="submit" value="@TextStrings.AuctionCloseLink" class="btn btn-default" onclick="closeAuction()" />
                        </div>
                    </td>
                    <td>@SilentAuction.Resources.TextStrings.AuctionCloseHelp</td>
                </tr>
        </table>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AuctionList")
</div>

<script>
    function closeAuction() {
        document.getElementById("action").value = "close";
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
